<main class="bg" id="content">

    <%= render "shared/site-heading" %>
    <%= render "shared/menu" %>

    <section class="page-section cta">
      <div class="container">
        <div class="row">
          <div class="col-xl-9 mx-auto">
            <div class="cta-inner text-center rounded">
              <h2 class="section-heading mb-5">
                <span class="section-heading-upper">Tell me about your pet</span>
                <span class="section-heading-lower">Contact</span>
              </h2>

              <%= render "shared/contact-form" %>
              <p class="address mb-5">
                <em>
                  <strong>1620 E Riverside Dr</strong>
                  <br>
                  Austin, TX
                </em>
              </p>
              <p class="mb-0">
                <small>
                  <em>Call Anytime</em>
                </small>
                <br>
                (415)424-7743
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="page-section about-heading">
      <div class="container">
        <%= image_tag "tijana-bird02-scaled03.jpg", class: "img-fluid rounded about-heading-img mb-3 mb-lg-0" %>
        <%= render "shared/about-snippet" %> 
      </div>
    </section>
</main>

  <!-- Script to highlight the active date in the hours list -->
  <script>
    $('.list-hours li').eq(new Date().getDay()).addClass('today');
  </script>

